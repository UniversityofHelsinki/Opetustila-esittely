<div class="l-top-bar l-top-bar--small">
  <div class="l-top-bar__left">
    <div class="links theme-plain">
      <a class="links__link" href="https://www.helsinki.fi">Helsingin yliopisto</a>
    </div>
  </div>
  <div class="l-top-bar__right">
    <div class="links theme-plain">
      {{ elements.languageswitcher }}
    </div>
  </div>
</div>

<div class="l-header-bar l-header-bar--transparent">
  <div class="l-header-bar__top">
    <div class="l-header-bar__left">
      {% if logo_path and logo_text %}
        <a href="{{ logo_path }}" class="logo">
          <p class="logo__sitename">{{ logo_text }}</p>
        </a>
      {% endif %}
    </div>
  </div>
</div>
